name: oob-nic
kind: chunk
build-commands:
- cd meta-facebook/meta-wedge/recipes-wedge/oob-nic/oob-nic/src && make
install-commands:
- install -d $DESTDIR/usr/sbin
- install -m 755 meta-facebook/meta-wedge/recipes-wedge/oob-nic/oob-nic/src/oob-nic $DESTDIR/usr/sbin/oob-nic
- install -m 755 meta-facebook/meta-wedge/recipes-wedge/oob-nic/oob-nic/src/i2craw $DESTDIR/usr/sbin/i2craw
- install -d $DESTDIR/etc/init.d
- install -d $DESTDIR/etc/rcS.d
- install -m 755 meta-facebook/meta-wedge/recipes-wedge/oob-nic/oob-nic/src/etc/oob-nic.sh $DESTDIR/etc/init.d/oob-nic.sh
