name: sms-kcsd
kind: chunk
build-commands:
- cd meta-facebook/meta-wedge/recipes-wedge/sms-kcsd/sms-kcsd && make
install-commands:
- install -d $DESTDIR/usr/local/fbpackages/sms-kcsd
- install -d $DESTDIR/usr/local/bin
- install -m 755 meta-facebook/meta-wedge/recipes-wedge/sms-kcsd/sms-kcsd/sms-kcsd $DESTDIR/usr/local/fbpackages/sms-kcsd/sms-kcsd
- ln -snf $DESTDIR/usr/local/fbpackages/sms-kcsd/sms-kcsd $DESTDIR/usr/local/bin/sms-kcsd
- install -d $DESTDIR/etc/init.d
- install -d $DESTDIR/etc/rcS.d
- install -m 755 meta-facebook/meta-wedge/recipes-wedge/sms-kcsd/sms-kcsd/setup-sms-kcs.sh $DESTDIR/etc/init.d/setup-sms-kcs.sh
